@model IEnumerable<EasyManage.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/customLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add New Product", "Add")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductDetails)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductType.ProductTypeName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.productImage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ProductName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ProductPrice)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ProductDetails)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ProductType.ProductTypeName)
    </td>

    <td>
        @*@Html.DisplayFor(modelItem => item.productImage)*@

        <img src="@Url.Content(item.productImage)" width="250" height="250" multiple />
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.ProductID }) |
        @Html.ActionLink("Details", "Details", new { id = item.ProductID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.ProductID })
    </td>
</tr>
}

</table>
