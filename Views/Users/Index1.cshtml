                </div>
                <div>
                    <div class="col-md-8">
                        @*width="150px" height="150px"*@
                        <img src="@Url.Content(@item.productImage)" width="150px" height="150px" />
                    </div>
                    <div class="col-md-4" style="text-align: left">
                        <b>@item.ProductDetails</b>
