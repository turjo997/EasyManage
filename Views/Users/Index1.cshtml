<div class="row">

    <div class="col-lg-10 col-md-10 col-sm-10">
        @if (TempData["msg"] != null)
        {
            <div class="alert alert-success" role="alert" style="font-size:large">
                @TempData["msg"]
            </div>

        }
        @if (TempData["total"] == null)
        {

            <h3>
                Total Bill: 0 Taka
            </h3>
        }
        else
        {
            <h3> Total Bill: @TempData["total"] Rs</h3>

        }

    </div>


    <div class="col-lg-2 col-md-2 col-sm-2">
        <h3 style="font-family:'Arial Rounded MT';text-align:center"> <span class="btn btn-warning">@Html.ActionLink("Check Out", "checkout", "Users")</span></h3>
    </div>




</div>







